<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <delete model="ir.ui.view" id="magazine_subscription_order.view_partner_form_susbcription_inherit"/>
    
    <record id="view_partner_form_subscription_inherit" model="ir.ui.view">
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="model">res.partner</field>
        <field type="xml" name="arch">
            <xpath expr="//page[last()]" position="after">
                <page name='subscription' string="Subscription">
                    <group cols="4">
                        <group name="subscription">
                            <field name="is_subscription_customer"/>
                            <field name="credit_limit" attrs="{'invisible': [('is_subscription_customer', '=', False)],'required': [('is_subscription_customer', '=', True)]}"/>
                            <field name="property_subscription_journal_id" attrs="{'invisible': [('is_subscription_customer', '=', False)],'required': [('is_subscription_customer', '=', True)]}"/>
                            <field name="property_subscription_payment_term_id" attrs="{'invisible': [('is_subscription_customer', '=', False)],'required': [('is_subscription_customer', '=', True)]}"/>
                        </group>
                        <group string="Subscription Validity" attrs="{'invisible': [('is_subscription_customer', '=', False)]}">
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>