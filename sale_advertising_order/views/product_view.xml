<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Product.Category Views -->
		 <record id="product_category_tree_view_inh" model="ir.ui.view">
				<field name="name">product.category.tree</field>
				<field name="model">product.category</field>
				<field name="inherit_id" ref="product.product_category_list_view"/>
				<field name="arch" type="xml">
					<field name="display_name" position="replace">
						<field name="complete_name" />
						<field name="date_type" />
					</field>
				</field>
		 </record>

		 <record id="product_category_form_view_inherit" model="ir.ui.view">
				<field name="name">product.category.form.inherit</field>
				<field name="model">product.category</field>
				<field name="inherit_id" ref="product.product_category_form_view"/>
				<field name="arch" type="xml">
					<field name="type" position="after">
						<field name="date_type" attrs="{'required':[('parent_id','child_of',%(sale_advertising_order.advertising_category)d)]}"/>
						<field name="deadline_offset" attrs="{'required':[('parent_id','child_of',%(sale_advertising_order.advertising_category)d)]}"/>
					</field>
				</field>
		 </record>

		<!-- Product.template Views -->


		<record id="product_template_form_view_advertising" model="ir.ui.view">
		   <field name="name">product.template.common.form</field>
		   <field name="model">product.template</field>
			<field name="priority">12</field>
		   <field name="inherit_id" ref="product.product_template_form_view"/>
		   <field name="arch" type="xml">
			  <field name="categ_id" position="after">
				 <field name="height"/>
				 <field name="width"/>
			  </field>
		   </field>
		</record>

		<record id="product_template_form_view" model="ir.ui.view">
				<field name="name">product.template.form.inherit</field>
				<field name="model">product.template</field>
				<field name="priority">13</field>
				<field name="inherit_id" ref="account.product_template_form_view"/>
				<field name="arch" type="xml">
					<page name="invoicing" position="attributes">
						<attribute name="groups">account.group_account_invoice,sale_advertising.group_traffic_user</attribute>
					</page>
				</field>
		 </record>

		<record id="product_template_only_form_view_adver" model="ir.ui.view">
			<field name="name">product.template.product.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<field name="default_code" position="attributes">
					<attribute name="attrs">{}</attribute>
				</field>
			</field>
		</record>

	</data>
</odoo>
