<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_saleorder_document_package" inherit_id="nsm_sale_advertising_order.report_saleorder_document_nsm">
    <xpath expr="//th[@name='line_amount_th']" position="replace">
        <t t-if="not doc.package">
            <th name="line_amount_th" width="10%" class="text-right">Tax Excluded Price</th>
        </t>
    </xpath>
    <xpath expr="//td[@name='line_amount_td']" position="replace">
        <t t-if="not doc.package">
            <td name="line_amount_td" class="text-right" >
                <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
            </td>
        </t>
    </xpath>
</template>

</odoo>
