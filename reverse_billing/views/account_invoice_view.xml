<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="invoice_supplier_form_revbil" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.revbil</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <data>
                    <button name="action_invoice_open" position="replace">
                        <button name="action_invoice_open" type="object" string="Validate"
                                attrs="{'invisible': ['|','|',('state', 'not in', ['start_wf','proforma2']),('product_category','=', %(reverse_billing.revbil_categoryB)d ),
                                '&amp;',('revbil','!=',True),('state', 'not in', ['start_wf','proforma2'])]}"
                                class="oe_highlight" groups="account.group_account_invoice"/>
                        <field name="sent" invisible="1"/>
                        <field name="revbil" invisible="1"/>
                    </button>
                </data>
            </field>
        </record>


        <record id="view_account_invoice_filter_revbil" model="ir.ui.view">
            <field name="name">account.invoice.select.revbil</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <group position="inside">
                        <filter string="Batch" icon="terp-partner" domain="[]" context="{'group_by':'origin'}"
                                groups="reverse_billing.group_module_revbil_user"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
